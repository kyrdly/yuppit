<div id="ideas" class="transitions-enabled">
  <% @ideas.each do |idea| %>
    <div class="box panel panel-default">
      <%= image_tag idea.image.url(:medium) %>
      <div class="panel-body">
        <%= idea.description %>
        <%= idea.user.email if idea.user %>
        <%= link_to 'Show', idea_path(idea) %>
        <% if idea.user == current_user %>
          <%= link_to 'Edit', edit_idea_path(idea) %>
          <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>